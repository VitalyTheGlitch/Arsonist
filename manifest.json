{
	"manifest_version": 3,
	"name": "Arsonist",
	"version": "1.0.0",
	"description": "Wolvesville automation",
	"author": "Corruptor",
	"action": {
		"default_title": "Arsonist",
		"default_popup": "popup/popup.html",
		"default_icon": {
			"32": "images/icons/32.png"
		}
	},
	"icons": {
		"16": "./images/icons/16.png",
		"32": "./images/icons/32.png",
		"64": "./images/icons/64.png",
		"128": "./images/icons/128.png",
		"256": "./images/icons/256.png",
		"512": "./images/icons/512.png",
		"1024": "./images/icons/1024.png"
	},
	"content_scripts": [
		{
			"js": [
				"./contentscripts/toast/toast.js",
				"./contentscripts/miner/miner.js",
				"./contentscripts/assassin/assassin.js"
			],
			"css": [
				"./contentscripts/toast/toast.css"
			],
			"matches": [
				"*://www.wolvesville.com/*"
			],
			"all_frames": true
		},
		{
			"js": [
				"./contentscripts/toast/toast.js",
				"./contentscripts/miner/ad.js"
			],
			"css": [
				"./contentscripts/toast/toast.css"
			],
			"matches": [
				"*://googleads.g.doubleclick.net/*",
				"*://pagead.googlesyndication.com/*",
				"*://pagead2.googlesyndication.com/*"
			],
			"all_frames": true
		}
	],
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"permissions": [
		"storage",
		"tabs",
		"activeTab",
		"notifications"
	],
	"host_permissions": [
		"*://wolvesville.com/*",
		"*://www.wolvesville.com/*",
		"*://googleads.g.doubleclick.net/*",
		"*://pagead.googlesyndication.com/*",
		"*://pagead2.googlesyndication.com/*"
	],
	"web_accessible_resources": [
		{
			"resources": [
				"contentscripts/notifications/notification.css",
				"contentscripts/notifications/notification.js"
			],
			"matches": [
				"*://wolvesville.com/*",
				"*://www.wolvesville.com/*",
				"*://googleads.g.doubleclick.net/*",
				"*://pagead.googlesyndication.com/*",
				"*://pagead2.googlesyndication.com/*"
			]
		}
	],
	"content_security_policy": {
		"extension_pages": "script-src 'self'; object-src 'self'"
	}
}